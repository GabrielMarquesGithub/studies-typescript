{
	"name": "driver-matcher",
	"private": true,
	"version": "1.0.0",
	"scripts": {
		"dev": "npm run services:up && (trap 'npm run services:stop' INT TERM HUP; npm run dev:concurrently)",
		"dev:concurrently": "concurrently -k --names Run,Check -c '#cb3837,#3178c6' \"npm:dev:run\" \"npm:dev:check\"",
		"dev:run": "NODE_ENV=dev tsx watch src/server.ts",
		"dev:check": "tsc --noEmit --watch --pretty",
		"build": "tsc && tsc-alias",
		"build:docs": "NODE_ENV=prod tsx src/scripts/build-swagger-doc.ts",
		"start": "NODE_ENV=prod node dist/src/server.js",
		"test": "NODE_ENV=test vitest --run",
		"test:watch": "NODE_ENV=test vitest",
		"services:up": "docker compose up -d",
		"services:down": "docker compose down",
		"services:stop": "docker compose stop",
		"migration:dev": "npx --no prisma migrate dev",
		"migration:run": "npx --no prisma migrate deploy",
		"migration:reset": "npx --no prisma migrate reset --force",
		"db:client": "npx --no prisma generate",
		"lint:check": "biome check",
		"lint:fix": "biome check --write"
	},
	"dependencies": {
		"@fastify/helmet": "^13.0.2",
		"@fastify/rate-limit": "^10.3.0",
		"@fastify/swagger": "^9.6.1",
		"@fastify/swagger-ui": "^5.2.3",
		"@prisma/adapter-pg": "^7.0.1",
		"@vitest/coverage-v8": "^4.0.12",
		"axios": "^1.13.2",
		"dotenv": "^17.2.3",
		"fastify": "^5.6.2",
		"fastify-type-provider-zod": "^6.1.0",
		"prisma": "^7.0.1",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.6",
		"@prisma/client": "^7.0.1",
		"@types/node": "^24.10.1",
		"concurrently": "^9.2.1",
		"fastify-tsconfig": "^3.0.0",
		"pino-pretty": "^13.1.2",
		"tsc-alias": "^1.8.16",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^4.0.12"
	}
}
