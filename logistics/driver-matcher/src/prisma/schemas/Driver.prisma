enum DriverStatus {
    AVAILABLE
    UNAVAILABLE
}

model Driver {
    id     String       @id @default(uuid(7))
    name   String       @db.VarChar(255)
    status DriverStatus

    lat Float
    lng Float

    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime @updatedAt @map("updated_at")

    vehicle Vehicle[]

    @@index([status])
    @@map("drivers")
}
